<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="@color/zigbang"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/apart_iv_background"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:scaleType="fitXY"
                android:src="@drawable/apart_first" />


            <ImageView
                android:id="@+id/apart_iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:onClick="apartOnClick"
                android:padding="5dp"
                android:src="@drawable/arrow_left" />


            <LinearLayout
                android:id="@+id/apart_linear"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/apart_iv_background"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="50dp"
                android:background="#b4b4b4"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/apart_rel_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_back_left"
                    android:gravity="center_vertical"
                    android:onClick="apartOnClick">

                    <ImageView
                        android:id="@+id/apart_iv_first"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_corner_back_2"
                        android:backgroundTint="@color/zigbang"
                        android:padding="3dp"
                        android:src="@drawable/apart_map" />

                    <TextView
                        android:id="@+id/apart_tv_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/apart_iv_first"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="매매/전·월세"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/apart_rel_second"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner_back_right"
                    android:gravity="center_vertical"
                    android:onClick="apartOnClick">

                    <ImageView
                        android:id="@+id/apart_iv_second"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_corner_back_2"
                        android:backgroundTint="@color/zigbang"
                        android:padding="3dp"
                        android:src="@drawable/apart_new" />

                    <TextView
                        android:id="@+id/apart_tv_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/apart_iv_second"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="신축분양"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/apart_linear_big_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빅데이터랩™"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/apart_tv_big_data_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="으로 "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apart_tv_big_data_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인구흐름 "
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/apart_tv_big_data_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보기  >"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/apart_iv_news"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="15dp"
                android:src="@drawable/news"
                app:layout_constraintBottom_toTopOf="@+id/apart_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/apart_tv_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="최신 뉴스"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/apart_iv_news"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/apart_view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_tv_news" />

            <ImageView
                android:id="@+id/apart_iv_new_1"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/new_1"
                app:layout_constraintEnd_toStartOf="@+id/apart_iv_new_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_view" />

            <ImageView
                android:id="@+id/apart_iv_new_2"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/new_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/apart_iv_new_1"
                app:layout_constraintTop_toBottomOf="@+id/apart_view" />

            <TextView
                android:id="@+id/apart_tv_new_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text="수도권 비규제 지역이 오를 수밖에 없는 3가지 이유"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/apart_iv_new_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_iv_new_1" />

            <TextView
                android:id="@+id/apart_tv_new_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text="분상제 적용 이후 고덕 청약, 경쟁률 537대 1"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/apart_iv_new_1"
                app:layout_constraintTop_toBottomOf="@+id/apart_iv_new_2" />

            <View
                android:id="@+id/apart_view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_tv_new_1" />

            <TextView
                android:id="@+id/apart_tv_new_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:text="공독주택, 2030년까지 현실화율 90%로 맞춘다"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_view2" />

            <View
                android:id="@+id/apart_view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_tv_new_3" />

            <TextView
                android:id="@+id/apart_tv_new_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:text="19년 만에 최악...임대차법 3개월 만에 전세시장 쑥대밭"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_view3" />

            <View
                android:id="@+id/apart_view5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_tv_new_4" />

            <TextView
                android:id="@+id/apart_tv_new_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:text="국토부, 11월 청년 신혼부부 매입임대 4241가구 입주자..."
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_view5" />

            <View
                android:id="@+id/apart_view6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_tv_new_5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/apart_iv_favorite_apart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="15dp"
                android:src="@drawable/apart_favorite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/apart_tv_favorite_apart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:text="관심 아파트"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/apart_iv_favorite_apart"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/apart_view7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_tv_favorite_apart" />

            <ImageView
                android:id="@+id/apart_iv_favorite_apart_1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_empty"
                app:layout_constraintEnd_toStartOf="@+id/apart_iv_favorite_apart_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apart_view7" />

            <ImageView
                android:id="@+id/apart_iv_favorite_apart_2"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_empty"
                app:layout_constraintEnd_toStartOf="@+id/apart_iv_favorite_apart_3"
                app:layout_constraintStart_toEndOf="@+id/apart_iv_favorite_apart_1"
                app:layout_constraintTop_toBottomOf="@+id/apart_view7" />

            <ImageView
                android:id="@+id/apart_iv_favorite_apart_3"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/image_empty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/apart_iv_favorite_apart_2"
                app:layout_constraintTop_toBottomOf="@+id/apart_view7" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    </LinearLayout>
</ScrollView>