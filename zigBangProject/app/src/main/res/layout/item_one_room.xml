<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/one_room_item_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/one_room_item_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recommend"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="#009688"
                android:paddingHorizontal="2dp"
                android:text="추천" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text=" 원룸·분리형 원룸" />
        </LinearLayout>

        <TextView
            android:id="@+id/one_room_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="전세 1억 2,000" />

        <TextView
            android:id="@+id/one_room_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="7평·3층" />

        <TextView
            android:id="@+id/one_room_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="관악구 신림동" />

        <TextView
            android:id="@+id/one_room_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="내용" />
    </LinearLayout>

</RelativeLayout>