<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="15dp">

    <TextView
        android:id="@+id/item_school_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울율현초등학교"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_school_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공립/공학"
        android:layout_below="@id/item_school_tv_name" />


    <TextView
        android:id="@+id/item_school_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="344m"
        android:textColor="@color/find_detail_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학교까지 거리"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/item_school_tv_distance" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>